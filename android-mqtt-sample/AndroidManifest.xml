<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1"
          android:versionName="1.0"
          package="com.example.mqtt">

    <uses-sdk android:minSdkVersion="4"
              android:targetSdkVersion="19" />

    <application android:label="@string/app_name">
        <activity android:label="@string/app_name"
                  android:name=".SimpleMqttActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name="com.jessefarebro.mqtt.MqttService"
                 android:label="Mqtt Service"
                 android:exported="false" />

        <receiver android:name="com.example.mqtt.SimpleMessageReceiver">
            <intent-filter>
                <action android:name="com.jessefarebro.mqtt.RECEIVED" />
                <data android:scheme="mqtt" android:path="test" />
            </intent-filter>
        </receiver>

    </application>
</manifest>